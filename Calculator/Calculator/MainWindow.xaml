<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="resultLabel" Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Grid.ColumnSpan="4"/>
        <Button x:Name="ACButton" Content="AC"
                
                Grid.Row="1"
                Style="{StaticResource additionalButtonStyle}"/>
        <Button x:Name="Negative" Content="+/-"
                
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource additionalButtonStyle}"/>
        <Button x:Name="Percentage" Content="%"
                
                Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource additionalButtonStyle}"/>
        <Button x:Name="divisionButton" Content="/"
                
                Grid.Row="1"
                Grid.Column="3" Click="OperationButton_Click"
                Style="{StaticResource operatorButtonStyle}"/>
        <Button x:Name="sevenButton" Content="7"
                
                Grid.Row="2" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="eightButton" Content="8"
                
                Grid.Row="2"
                Grid.Column="1" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="nineButton" Content="9"
                
                Grid.Row="2"
                Grid.Column="2" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="multiplicationButton" Content="*"
                
                Grid.Row="2"
                Grid.Column="3" Click="OperationButton_Click"
                Style="{StaticResource operatorButtonStyle}"/>
        <Button x:Name="fourButton" Content="4"
                
                Grid.Row="3" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="fiveButton" Content="5"
                
                Grid.Row="3"
                Grid.Column="1" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="sixButton" Content="6"
                
                Grid.Row="3"
                Grid.Column="2" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="substrationButton" Content="-"
                
                Grid.Row="3"
                Grid.Column="3" Click="OperationButton_Click"
                Style="{StaticResource operatorButtonStyle}"/>
        <Button x:Name="oneButton" Content="1"
                
                Grid.Row="4" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="twoButton" Content="2"
                
                Grid.Row="4"
                Grid.Column="1" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="threeButton" Content="3"
                
                Grid.Row="4"
                Grid.Column="2" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="additionButton" Content="+"
                
                Grid.Row="4"
                Grid.Column="3" Click="OperationButton_Click"
                Style="{StaticResource operatorButtonStyle}"/>
      
        <Button x:Name="zeroButton" Content="0"
                
                Grid.Row="5"
                Grid.ColumnSpan="2" Click="NumberButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="pointButton" Content="."
                
                Grid.Row="5"
                Grid.Column="2" Click="PointButton_Click"
                Style="{StaticResource numberButtonStyle}"/>
        <Button x:Name="Equal" Content="="
                
                Grid.Row="5"
                Grid.Column="3"
                Style="{StaticResource operatorButtonStyle}"/>

    </Grid>
</Window>
